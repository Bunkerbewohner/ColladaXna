using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using Microsoft.Xna.Framework.Graphics;

namespace COLLADA.Data.Materials
{
    /// <summary>
    /// A material that has been loaded by compiling the corresponding
    /// effect. 
    /// </summary>
    public class LoadedMaterial : Material
    {
        /// <summary>
        /// The effect that corresponds to this material
        /// </summary>
        public CompiledEffect CompiledEffect { get; private set;}

        /// <summary>
        /// Creates a new loaded material
        /// </summary>
        /// <param name="material"></param>
        /// <param name="compiledEffect"></param>
        public LoadedMaterial(Material material, CompiledEffect compiledEffect)
            : base(material.Name, material.Properties)
        {
            CompiledEffect = compiledEffect;
        }
    }
}
